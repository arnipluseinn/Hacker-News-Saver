{
  "manifest_version": 3,
  "name": "Hacker News Saver",
  "version": "1.1",
  "description": "Save Hacker News articles to read later.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/news",
        "https://news.ycombinator.com/"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
